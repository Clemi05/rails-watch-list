<!-- Banner with the similar image as the card-list -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container py-3">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2>My bookmarks <span><%= link_to "Create a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %></span></h2>
    <%= link_to "Back", root_path, class:"btn-ghost" %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-6">
        <div class="card-bookmark">
          <img src="<%= bookmark.movie.poster_url%>" />
          <div class="card-bookmark-infos">
            <div>
              <h2><%= bookmark.movie.title%> | <span> <%= bookmark.movie.rating %> <i class="fas fa-star"></i></span></h2>
              <p><%= bookmark.movie.overview %></p>
              <i class="fas fa-quote-left"></i> <small class="flex-grow-1"><%= bookmark.comment %></small>
            </div>
            <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } do %>
              <i class="fas fa-trash i-delete"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
