<div class="container">
  <h1>Create a bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %><br>
    <%= f.association :movie %><br>
    <%= f.submit class: "btn-flat"%>
  <% end %><br>

  <%= link_to "Back to my lists", list_path(@list), class:"btn-ghost" %>
</div>
